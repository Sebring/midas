{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@migrationsverket/*": ["packages/*/src/index.ts"],
      "@migrationsverket/breadcrumbs": ["packages/breadcrumbs/src/index.ts"],
      "@migrationsverket/link": ["packages/link/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
