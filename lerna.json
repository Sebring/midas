{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "bootstrap": {},
    "publish": {
      "directory": "{workspaceRoot}/dist/{projectRoot}/",
      "registry": "https://npm.pkg.github.com/"
    },
    "version": {
      "since": "develop",
      "npmClientArgs": [
        "--@migrationsverket:registry=https://npm.pkg.github.com"
      ],
      "changelog": true,
      "commitHooks": false,
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/stories/**",
        "**/tests/**",
        "*.stories.ts",
        "*.test.ts",
        "*.spec.ts",
        "**/__snapshots__/**",
        "docs/**/*",
        ".storybook/**/*",
        "scripts/**/*",
        ".github/**/*"
      ]
    }
  },
  "packages": ["packages/*"]
}
