{
  "name": "breadcrumbs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/breadcrumbs/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "info": {
      "command": "npm view @migrationsverket/{projectName} --json > apps/docs/static/data/{projectName}.json"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/breadcrumbs"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/breadcrumbs/jest.config.ts"
      }
    }
  }
}
